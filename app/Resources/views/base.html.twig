<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
    <title>{% block title %}View{% endblock %} - ShmUserManager</title>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    {% block stylesheets %}
        <!-- Bootstrap -->
        <link href="{{ asset('css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
        <!-- /Bootstrap -->
        <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
        <link href="{{ asset('css/base.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

<!-- Static navbar -->
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path("ShmUserBundle_homepage") }}">SUM</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-left">
                {% block header %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Users <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('users_index') }}">View all Users</a></li>
                            <li><a href="{{ path('users_new') }}">Add new <span class="glyphicon glyphicon-plus"></span></a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Groups <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('groups_index') }}">View all Groups</a></li>
                            <li><a href="{{ path('groups_new') }}">Add new <span class="glyphicon glyphicon-plus"></span></a></li>
                        </ul>
                    </li>
                {% endblock %}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                {% block corner %}
                    <li><a href="#">Corner</a></li>
                {% endblock %}
                </ul>
        </div>
    </div>
</nav>

<div class="container-fluid">
    {% block body %}
        <div class="jumbotron">
            It's my body
        </div>
    {% endblock %}
</div>

<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        {% block footer %}
        <p class="navbar-text text-center">Project on <a href="https://github.com/Shamann1101/UserManagement" target="_blank">GitHub</a></p>
        {% endblock %}
    </div>
</nav>

{% block javascripts %}
    <!-- Bootstrap -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    <!-- /Bootstrap -->
{% endblock %}
</body>
</html>
