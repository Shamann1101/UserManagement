{% extends "ShmUserBundle::corner.html.twig" %}

{% block title %}
    {{ group.name }}
{% endblock %}

{% block body %}
    {{ form_start(form, { 'action': path('ShmUserBundle_group_new'), 'method': 'POST', 'attr': {'class': 'Shm'} }) }}
    {{ form_widget(form.name, {'value' : group.name}) }}
    {{ form_rest(form) }}

    <input type="submit" value="Save" />
{% endblock %}