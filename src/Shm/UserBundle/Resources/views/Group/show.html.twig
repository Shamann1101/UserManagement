{% extends '@ShmUser/corner.html.twig' %}

{% block body %}
    <h1>Group</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Rules</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ group.id }}</td>
                <td>{{ group.name }}</td>
                <td>{{ group.rules }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('groups_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('groups_edit', { 'id': group.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
