{% extends '@ShmUser/corner.html.twig' %}

{% block title %}Group {{ group.name }} view{% endblock %}

{% block body %}
    <h1>Group</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Rules</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ group.id }}</td>
                <td>{{ group.name }}</td>
                <td>{{ group.rules }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-toolbar" role="group" aria-label="Edit actions">
        <div class="btn-group" role="group" aria-label="Edit actions">
            <a href="{{ path('groups_index') }}">
                <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-level-up" aria-hidden="true"></span>
                </button>
            </a>
            <a class="btn btn-default" href="{{ path('groups_edit', { 'id': group.id }) }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
        </div>
        <div class="btn-group" role="group" aria-label="Delete action">
            {{ form_start(delete_form) }}
            <button class="btn btn-danger">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
