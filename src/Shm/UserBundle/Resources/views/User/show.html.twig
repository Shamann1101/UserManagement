{% extends '@ShmUser/corner.html.twig' %}

{% block title %}Group {{ user.lastName }} {{ user.firstName }} view{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <th>Last_name</th>
                <th>First_name</th>
                <th>Email</th>
                <th>State</th>
                <th>Date_create</th>
                <th>Group</th>
            </tr>
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% if user.state %}
                        <span class="glyphicon glyphicon-ok"></span>
                    {% else %}
                        <span class="glyphicon glyphicon-remove"></span>
                    {% endif %}
                </td>
                <td>{% if user.datecreate %}{{ user.datecreate|date('l, F j, Y') }}{% endif %}</td>
                <td>{{ user.group }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-toolbar" role="group" aria-label="Edit actions">
        <div class="btn-group" role="group" aria-label="Edit actions">
            <a href="{{ path('users_index') }}">
                <button type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-level-up" aria-hidden="true"></span>
                </button>
            </a>
            <a class="btn btn-default" href="{{ path('users_edit', { 'id': user.id }) }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
        </div>
        <div class="btn-group" role="group" aria-label="Delete action">
            {{ form_start(delete_form) }}
            <button class="btn btn-danger">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </button>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
